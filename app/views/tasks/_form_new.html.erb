<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
        <% task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :タイトル %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :詳細 %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :期日 %>
    <%= form.datetime_field :time_limit  %>
  </div>

  <div class="field">
    <%= form.label :重要度 %>
    <%= form.select :importance, Task.importances.keys, include_blank: "選択して下さい"  %>
  </div>

    <div class="field">
    <%= form.label :チーム %>
    <%= form.collection_select(:team_id, @teams, :id, :name)  %>
  </div>

  <div class="field">
    <%= form.label :メモ %>
    <%= form.text_area :memo %>
  </div>

    <div class="actions">
    <%= form.submit %>
  </div>
  <br>
  <%= form.fields_for :requests do |request| %>
    <h2>申し送りする （<%= request.index+1 %>回目）</h2>
    <%= request.label  :メッセージ %>
    <%= request.text_area :message %>
    <%# <% predecessor = [] %>
    <%# <% predecessor.push(current_user) %>
    <%# <% request.collection_select(:predecessor_id, predecessor, :id, :name) %>

    <%= request.label :後任者 %>
    <%= request.collection_select(:successor_id, @users, :id, :name, include_blank: "選択して下さい" ) %>
    <br>
    <br>
<% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
  <br>
<% end %>
