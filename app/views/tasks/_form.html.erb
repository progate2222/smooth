  </div>

  <div class="field">
    <%= form.label :time_limit %>
    <%= form.text_area :time_limit %>
  </div>

  <div class="field">
    <%= form.label :importance %>
    <%= form.number_field :importance %>
  </div>

  <div class="field">
    <%= form.label :completion_flag %>
    <%= form.check_box :completion_flag %>
  </div>

  <div class="field">
    <%= form.label :memo %>
    <%= form.text_area :memo %>
  </div>

  <div class="actions">
    <%= form.submit %>
