<h1>タスク一覧</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>詳細</th>
      <th>期日</th>
      <th>重要度</th>
      <th>完了フラグ</th>
      <th>メモ</th>
      <th>投稿者</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.time_limit %></td>
        <td><%= task.importance %></td>
        <td><%= task.completion_flag %></td>
        <td><%= task.memo %></td>
        <td><%= task.user.name %></td>
        <td><%= link_to '詳細', task %></td>
        <% if current_user.id == task.user_id or current_user.admin == true %>
          <td><%= link_to '編集', edit_task_path(task) %></td>
          <td><%= link_to '削除', task, method: :delete, data: { confirm: '削除してもよろしいですか?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'タスクを登録する', new_task_path %>
