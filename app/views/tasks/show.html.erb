<p>
  <strong>Title:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Time limit:</strong>
  <%= @task.time_limit %>
</p>

<p>
  <strong>Importance:</strong>
  <%= @task.importance %>
</p>

<p>
  <strong>Completion flag:</strong>
  <%= @task.completion_flag %>
</p>

<p>
  <strong>Memo:</strong>
  <%= @task.memo %>
</p>

<p>
  <strong>投稿者:</strong>
  <%= @task.user.name %>
</p>

<% if current_user.id == @task.user_id or current_user.admin == true %>
  <%= link_to '編集', edit_task_path(@task) %> |
  <%= link_to '削除', @task, method: :delete, data: { confirm: '削除してもよろしいですか?' } %>
<% end %>
<%= link_to '戻る', tasks_path %>
