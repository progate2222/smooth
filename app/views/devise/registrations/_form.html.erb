<%# #sign_upのviewの保管 %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>

    <div class= "sign-content">
        <div class="sub-content">
            <div class="field">
                <h3><%= f.label :ユーザー名 %></h3>
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form" %>
            </div>

        <div class="field">
            <h3><%= f.label :email %></h3>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form"  %>
        </div>

        <div class="field">
            <h3><%= f.label :password %></h3>
            <% if @minimum_password_length %>
            <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form" %>
        </div>

        <div class="field">
            <h3><%= f.label :password_confirmation %></h3>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form" %>
        </div>

        <div class="center">
            <div class="actions">
                <%= f.submit t('.sign_up'), class: "btn sign-btn admin-btn" %>
            </div>
<% end %>

<%= render "devise/shared/links" %>
        </div>
    </div>
</div>
