<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>チーム名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= link_to '詳細', team %></td>
        <td><%= link_to '編集', edit_team_path(team) %></td>
        <td><%= link_to '削除', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しいチームを作製する', new_team_path %>
