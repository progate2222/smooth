<div class="main-content">

  <h1><%= @team.name %> 詳細</h1><br>

<table>
  <thead>
    <tr>
      <th>メンバー</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <% @team_members.each do |member| %>
        <tr>
          <td><%= member.name %></td>
          <td><%= button_to '詳細', users_show_path(id: member.id),method: :get, class: "btn mini-btn" %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<table>
  <thead>
    <tr>
      <th>チームのタスク</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @team_tasks.each do |task| %>
      <tr>
          <% if task.team_id == @team.id%>
            <td><%= task.title %></td>
            <td><%= button_to '詳細', task_path(id: task.id),method: :get, class: "btn mini-btn"  %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
  </p>

    <% if @team_member.present? %>
      <%= link_to 'チームから外れる', team_member_path(id: @team_member.id), method: :delete, class: 'btn sign-btn' %>
    <% else %>
      <%= link_to 'チームに加わる', team_members_path(team_id: @team.id), method: :post, class: 'btn btn-primary' %>
    <% end %>
  <br><br>
  <div class="btn-cover">
    <%= button_to 'チームの編集', edit_team_path(@team), {method: :get, class:"btn" } %>
    <%= button_to "戻る", {controller: "teams", action: "index"}, {method: :get, class:"btn" } %>
  </div>
</div>

